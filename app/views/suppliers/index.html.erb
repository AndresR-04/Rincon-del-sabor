<div class="container">
  <h1>Proveedores</h1>
  <div>
    <%= link_to new_supplier_path, {class: "btn btn-info shadow"} do %>
    <%= fa_icon "plus-circle" %>
       Nuevo proveedor
    <% end %>
  </div>
  <br>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <p id="notice"><%= notice %></p>
        <table id="tablaCategories" class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.nombre %></td>
            <td><%= supplier.direccion %></td>
            <td><%= supplier.telefono %></td>
            <td><%= link_to 'Show', supplier %></td>
            <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
            <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
       </table>
      </div>
    </div>
  </div>
</div>
