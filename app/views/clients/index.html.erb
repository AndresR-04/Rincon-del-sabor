<div class="container">
  <h1>Clients</h1>
  <div>
    <%= link_to new_client_path, {class: "btn btn-info shadow"} do %>
    <%= fa_icon "plus-circle" %>
       nueva cliente
    <% end %>
  </div>
  <br>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <p id="notice"><%= notice %></p>
        <table id="tablaCategories" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Correo</th>
              <th>Identificacion</th>
              <th>Direccion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td><%= client.nombre %></td>
                <td><%= client.correo %></td>
                <td><%= client.identificacion %></td>
                <td><%= client.direccion %></td>
                <td><%= link_to 'Show', client %></td>
                <td><%= link_to 'Edit', edit_client_path(client) %></td>
                <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
       </table>
      </div>
    </div>
  </div>
</div>
