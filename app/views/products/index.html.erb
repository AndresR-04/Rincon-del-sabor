<div class="container">
  <h1>Categorias de Productos</h1>
  <div>
    <%= link_to new_product_path, {class: "btn btn-info shadow"} do %>
    <%= fa_icon "plus-circle" %>
       nuevo producto
    <% end %>
  </div>
  <br>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <p id="notice"><%= notice %></p>
        <table id="tablaCategories" class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Descripcion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
         <tbody>
         <% @products.each do |product| %>
             <tr>
              <td><%= product.nombre %></td>
              <td><%= product.cantidad %></td>
              <td><%= product.precio %></td>
              <td><%= product.descripcion %></td>
               <td align="center"><%= link_to 'Mostrar', product, class:"btn btn-success btn-xs" %></td>
               <td align="center"><%= link_to 'Editar', edit_product_path(product), class:"btn btn-info btn-xs"%></td>
               <td align="center"><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs" %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
      </div>
    </div>
  </div>
</div>
