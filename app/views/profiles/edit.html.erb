<%= form_with model: @profile do |f| %>
   <div class="input-group">
     
     <br />
     <%= f.file_field :photo %>
     <%if @profile.errors[:photo].any? %>
        <p class="bg-danger"><%= @profile.errors[:foto].to_s[/\w([^"]*)/] %></p>
     <% end %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">

  <%= render 'form', profile: @profile %>

  <%= link_to 'Show', @profile %>
  <%= link_to 'Back', profiles_path, class:"mt-2" %>

  </div>
 </div>
<% end %>
